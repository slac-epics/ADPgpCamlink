#
# Environment Variables for
# Adimec OPAL 1000m
#
epicsEnvSet( "IMAGE_FTVL",			"SHORT"		)
epicsEnvSet( "IMAGE_TYPE",			"Int16"		)
epicsEnvSet( "IMAGE_BIT_DEPTH",		"12"		)
epicsEnvSet( "IMAGE_XSIZE",			"1024"		)
epicsEnvSet( "IMAGE_YSIZE",			"1024"		)
epicsEnvSet( "IMAGE_COLORMODE",		"0"			)	# 0=Mono, 2=RGB
epicsEnvSet( "IMAGE_NELM",			"1048576"	)	# X*Y (B/W) or X*Y*3 (Color)

# Allow for older CA clients using 4 bytes/pixel 
epicsEnvSet( "EPICS_CA_MAX_ARRAY_BYTES", "6000000" )
